{
  "name": "twitter-clone",
  "version": "1.0.0",
  "description": "Twitter clone API with Prisma, Express, and TypeScript",
  "main": "src/index.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development npx nodemon",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "ts-node ./utils/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:clear": "jest --clearCache",
    "test:api": "jest --testPathPattern=src/__tests__/.*\\.test\\.ts$ --detectOpenHandles",
    "test:unit": "jest src/__tests__/unit",
    "test:integration": "jest src/__tests__/integration"
  },
  "keywords": [],
  "author": "Conggglee",
  "license": "ISC",
